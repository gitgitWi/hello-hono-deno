{
  "tasks": {
    "start": "deno run --allow-net --allow-read ./apis/main.ts",
    "server:dev": "deno run -A --watch=apis/ ./apis/main.ts",
    "client:dev": "deno run -A --unstable --node-modules-dir npm:vite",
    "client:build": "deno run -A --unstable --node-modules-dir npm:vite build"
  },
  "compilerOptions": {
    "lib": ["deno.window"]
  }
}
